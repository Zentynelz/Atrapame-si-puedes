<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/board_background">

    <!-- Game Info Panel -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:background="@color/white"
        android:padding="12dp"
        android:elevation="2dp">

        <TextView
            android:id="@+id/tvMoves"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/moves_initial"
            android:textSize="14sp"
            android:textColor="@color/text_primary" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/time_initial"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:gravity="end" />

    </LinearLayout>

    <!-- Game Board Container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:elevation="2dp"
        android:padding="8dp">

        <com.equipo.atrapame.presentation.game.view.IsometricBoardView
            android:id="@+id/gameBoard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/game_board_content_description"
            android:importantForAccessibility="yes" />

        <TextView
            android:id="@+id/tvGameStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/status_background"
            android:padding="12dp"
            android:text="@string/loading"
            android:textColor="@color/text_primary"
            android:textSize="18sp"

            android:visibility="gone" />

    </FrameLayout>

    <!-- Game Controls -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

    <com.equipo.atrapame.presentation.game.view.VirtualJoystickView
        android:id="@+id/joystick"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/joystick_content_description"
        android:importantForAccessibility="yes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <Button
        android:id="@+id/btnPause"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginEnd="12dp"
        android:minWidth="120dp"
        android:text="@string/btn_pause"
        android:backgroundTint="@color/button_secondary" />

        <Button
            android:id="@+id/btnRestart"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:minWidth="120dp"
            android:text="@string/btn_restart"
            android:backgroundTint="@color/button_primary" />

    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>